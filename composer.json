{
    "name": "10up/wpsnapshots-command",
    "type": "wordpress-plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "TenUp\\WPSnapshots\\": "includes/classes/"
        }
    },
    "require": {
        "aws/aws-sdk-php": "^3.254"
    },
    "require-dev": {
        "10up/phpcs-composer": "dev-master",
        "yoast/wp-test-utils": "^1.1",
        "wp-cli/wp-cli": "2.8.x-dev",
        "civicrm/composer-downloads-plugin": "dev-master",
        "php-stubs/wordpress-stubs": "^6.1",
        "php-stubs/wordpress-tests-stubs": "^6.1",
        "php": ">=8.0"
    },
    "scripts": {
        "lint": "phpcs .",
        "lint-fix": "phpcbf .",
        "static": "phpstan analyze --ansi --memory-limit=2G",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "civicrm/composer-downloads-plugin": true
        }
    },
    "extra": {
        "downloads": {
            "phpstan": {
              "path": "vendor/bin/phpstan",
              "type": "phar",
              "url": "https://github.com/phpstan/phpstan/releases/latest/download/phpstan.phar"
            }
          }
    }
}
